<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@color/shadow_color" />
        </shape>
    </item>
    <item  android:bottom="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#1D3DEF"
                android:endColor="#A4A1A5"/>

        </shape>
    </item>
    <item  android:bottom="1dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#34FFFFFF"
                android:endColor="#00FFFFFF" android:angle="270"/>
            <stroke android:width="1dp" android:color="@color/colorBlue"/>

        </shape>
    </item>
</layer-list>
